{
  "ApplicationName": "ShopManagement",
  "ServiceId": "ShopManagement",
  "ServiceName": "ShopManagement",
  "ServiceVersion": "1.0.0",

  "ConnectionStrings": {
    "CommandDb_ConnectionString": "Data Source=.; Initial Catalog=Order; Integrated Security=True;",
    "QueryDb_ConnectionString": "Data Source=.; Initial Catalog=Order; Integrated Security=True;"
  },

  "ParrotTranslator": {
    "AutoCreateSqlTable": true,
    "ConnectionString": "Data Source=.; Initial Catalog=Order; Integrated Security=True;",
    "SchemaName": "dbo",
    "TableName": "ParrotTranslations",
    "ReloadDataIntervalInMinuts": 1000
  },

  "WebUserInfo": {
    "DefaultUserId": -1
  },

  "AutoMapper": {
    "AssmblyNamesForLoadProfiles": "ShopManagement"
  },

  "PollingPublisher": {
    "ApplicationName": "ShopManagement",
    "SendCount": 100,
    "SendInterval": 1000,
    "ExceptionInterval": 10000
  },

  "PollingPublisherSqlStore": {
    "ConnectionString": "Data Source=.; Initial Catalog=Order; Integrated Security=True;",
    "ApplicationName": "ShopManagement"
  },

  "MessageInbox": {
    "ApplicationName": "ShopManagement"
  },

  "MessageInboxSqlStore": {
    "AutoCreateSqlTable": true,
    "ConnectionString": "Data Source=.; Initial Catalog=Order; Integrated Security=True;",
    "SchemaName": "dbo",
    "TableName": "MessageInbox"
  },

  "RabbitMq": {
    "PerssistMessage": false,
    "ExchangeName": "ShopManagementExchange",
    "ServiceName": "ShopManagement",
    "Url": "amqp://guest:guest@localhost:5672/"
  },

  "OAuth": {
    "Authority": "https://localhost:5000",
    "Audience": "ShopManagement",
    "RequireHttpsMetadata": true,
    "Scopes": {
      "ShopManagementScope": "ShopManagementScope"
    },
    "ValidateAudience": false,
    "ValidateIssuer": false,
    "ValidateIssuerSigningKey": false
  },

  "Swagger": {
    "Enabled": true,
    "SwaggerDoc": {
      "Version": "v1",
      "Title": "ShopManagement",
      "Name": "v1",
      "URL": "/swagger/v1/swagger.json"
    },
    "OAuth": {
      "Enabled": false,
      "AuthorizationUrl": "",
      "TokenUrl": "",
      "Scopes": {
        "ShopManagementScope": "ShopManagementScope"
      }
    }
  },

  "SoftwarePart": {
    "ApplicationName": "ShopManagement",
    "ModuleName": "ShopManagement",
    "ServiceName": "ShopManagement",
    "DestinationServiceBaseAddress": "https://localhost:6000/",
    "DestinationServicePath": "api/SoftwarePart/Create",
    "OAuth": {
      "Enabled": true,
      "Authority": "https://localhost:5000",
      "ClientId": "ShopManagement",
      "ClientSecret": "secret"
    }
  },

  "OpenTeletmetry": {
    "ApplicationName": "ShopManagement",
    "ServiceId": "ShopManagement",
    "ServiceName": "ShopManagement",
    "ServiceVersion": "1.0.0",
    "AgentHost": "https://localhost:7000",
    "AgentPort": 6831
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Zamin": "Verbose"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "%TEMP%\\Logs\\ShopManagement.Log.txt" }
      },
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "ShopManagement-serilog-sample-index-{0:yyyy.MM}",
          "restrictedToMinimumLevel": "Verbose",
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv6",
          "batchPostingLimit": 50,
          "period": 2,
          "inlineFields": true,
          "bufferFileSizeLimitBytes": 5242880,
          "bufferLogShippingInterval": 5000,
          "bufferRetainedInvalidPayloadsLimitBytes": 5000,
          "bufferFileCountLimit": 31,
          "connectionTimeout": 5,
          "emitEventFailure": "WriteToSelfLog",
          "queueSizeLimit": "100000"
        }
      }
    ]
  },

  "AllowedHosts": "*"
}
